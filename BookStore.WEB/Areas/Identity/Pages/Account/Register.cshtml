@page
@model RegisterModel


<div class="card text-dark bg-primary text-center mb-3 p-4" style="">
    <div class="card-header"><h4>Register</h4></div>
    <div class="card-body p-5">
        <div class="row">
            <div class="">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="card-title">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="row">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>                       
                    </div>
                    <div class="row">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Name" class="form-control" placeholder="Name" />
                            <label asp-for="Input.Name">Full Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                            <label asp-for="Input.StreetAddress">Street Address</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-floating mb-3 col-4">
                            <input asp-for="Input.City" class="form-control" placeholder="City" />
                            <label asp-for="Input.City">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-4">
                            <input asp-for="Input.State" class="form-control" placeholder="State" />
                            <label asp-for="Input.State">State</label>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-4">
                            <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                            <label asp-for="Input.PostalCode">Postal Code</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">               
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option disabled selected>Select Role</option>
                            </select>
                        </div>
                    </div>            
                    <div class="row">
                            <div class="mt-2 col-12">
                                <button id="registerSubmit" type="submit" class="btn btn-outline-dark col-6">Register</button>
                            </div>
                    </div>      
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-md-offset-2 card-footer p-5">
        <section>
            <h4>Use another service to register.</h3>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
