@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="">
                PRODUCT LIST
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-dark">
                <i class="bi bi-book"></i> Create New Product
            </a>
        </div>
    </div>
</div>

<table class="table table-borderless table-striped" id="tblData">
    <thead>
        <tr class="table-dark">
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th class="text-end">Edit/Delete</th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/product.js"></script>
}


